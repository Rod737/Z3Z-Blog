<div class="container">
    <article class="single-content">
        <header class="single-header">
            <h1 class="single-title"><%= poema.title %></h1>
            <div class="single-meta">
                <span class="single-category poemas">Poema</span>
                <span class="single-date"><%= poema.date %></span>
                <span class="single-tags"><%= poema.tags.join(', ') %></span>
            </div>
        </header>

        <div class="single-body poem-content-full">
            <% poema.content.forEach(line => { %>
                <% if (line === '') { %>
                    <br><br>
                <% } else { %>
                    <%= line %><br>
                <% } %>
            <% }); %>
        </div>

        <div class="single-navigation">
            <a href="/poemas" class="back-link">‚Üê Voltar aos Poemas</a>
        </div>

        <div class="share-section">
            <h4>Compartilhar</h4>
