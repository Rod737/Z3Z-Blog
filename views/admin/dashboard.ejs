<!-- Estatísticas Premium -->
<div class="admin-stats-grid">
    <div class="admin-stat-card">
        <div class="admin-stat-icon">
            <i data-lucide="feather" style="width: 40px; height: 40px; color: var(--admin-accent);"></i>
        </div>
        <div class="admin-stat-number"><%= stats.poemas %></div>
        <div class="admin-stat-label">Poemas</div>
    </div>
    
    <div class="admin-stat-card">
        <div class="admin-stat-icon">
            <i data-lucide="brain" style="width: 40px; height: 40px; color: var(--admin-info);"></i>
        </div>
        <div class="admin-stat-number"><%= stats.filosofia %></div>
        <div class="admin-stat-label">Filosofia</div>
    </div>
    
    <div class="admin-stat-card">
        <div class="admin-stat-icon">
            <i data-lucide="cross" style="width: 40px; height: 40px; color: var(--admin-warning);"></i>
        </div>
        <div class="admin-stat-number"><%= stats.religiao %></div>
        <div class="admin-stat-label">Religião</div>
    </div>
    
    <div class="admin-stat-card">
        <div class="admin-stat-icon">
            <i data-lucide="bar-chart-3" style="width: 40px; height: 40px; color: var(--admin-success);"></i>
        </div>
        <div class="admin-stat-number"><%= stats.total %></div>
        <div class="admin-stat-label">Total</div>
    </div>
</div>

<!-- Cards de Conteúdo Premium -->
<div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 32px; margin-top: 40px;">
    <!-- Card de Ações Rápidas -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h3 class="admin-card-title">
                <i data-lucide="zap" style="width: 20px; height: 20px; margin-right: 8px; color: var(--admin-accent);"></i>
                Ações Rápidas
            </h3>
            <p class="admin-card-subtitle">Crie novo conteúdo para o blog</p>
        </div>
        <div class="admin-card-body">
            <div style="display: flex; flex-direction: column; gap: 16px;">
                <a href="/admin/poemas/novo" class="admin-btn admin-btn-primary">
                    <i data-lucide="feather" style="width: 16px; height: 16px; margin-right: 8px;"></i>
                    Novo Poema
                </a>
                <a href="/admin/filosofia/novo" class="admin-btn admin-btn-primary">
                    <i data-lucide="brain" style="width: 16px; height: 16px; margin-right: 8px;"></i>
                    Nova Reflexão Filosófica
                </a>
                <a href="/admin/religiao/novo" class="admin-btn admin-btn-primary">
                    <i data-lucide="cross" style="width: 16px; height: 16px; margin-right: 8px;"></i>
                    Novo Artigo Religioso
                </a>
            </div>
        </div>
    </div>

    <!-- Card de Boas-vindas -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h3 class="admin-card-title">
                <i data-lucide="crown" style="width: 20px; height: 20px; margin-right: 8px; color: var(--admin-accent);"></i>
                Painel Administrativo
            </h3>
            <p class="admin-card-subtitle">Bem-vindo ao sistema de gestão do Z3Z</p>
        </div>
        <div class="admin-card-body">
            <div style="margin-bottom: 24px;">
                <h4 style="color: var(--admin-accent); margin-bottom: 8px; font-size: 1.1rem;">Olá, Administrador!</h4>
                <p style="color: rgba(255, 255, 255, 0.8); line-height: 1.7; margin-bottom: 20px;">
                    Este é o centro de controle do Blog Z3Z. Aqui você pode:
                </p>
            </div>
            
            <div style="display: grid; gap: 12px;">
                <div style="display: flex; align-items: center; gap: 12px; padding: 8px 0;">
                    <i data-lucide="sparkles" style="width: 18px; height: 18px; color: var(--admin-accent);"></i>
                    <span style="color: rgba(255, 255, 255, 0.9); font-size: 0.9rem;">Criar e editar poemas inspiradores</span>
                </div>
                <div style="display: flex; align-items: center; gap: 12px; padding: 8px 0;">
                    <i data-lucide="brain" style="width: 18px; height: 18px; color: var(--admin-info);"></i>
                    <span style="color: rgba(255, 255, 255, 0.9); font-size: 0.9rem;">Compartilhar reflexões filosóficas profundas</span>
                </div>
                <div style="display: flex; align-items: center; gap: 12px; padding: 8px 0;">
                    <i data-lucide="cross" style="width: 18px; height: 18px; color: var(--admin-warning);"></i>
                    <span style="color: rgba(255, 255, 255, 0.9); font-size: 0.9rem;">Publicar insights espirituais e religiosos</span>
                </div>
                <div style="display: flex; align-items: center; gap: 12px; padding: 8px 0;">
                    <i data-lucide="message-circle" style="width: 18px; height: 18px; color: var(--admin-success);"></i>
                    <span style="color: rgba(255, 255, 255, 0.9); font-size: 0.9rem;">Gerenciar comentários da comunidade</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Card de Status do Sistema -->
<div style="margin-top: 40px;">
    <div class="admin-card">
        <div class="admin-card-header">
            <h3 class="admin-card-title">
